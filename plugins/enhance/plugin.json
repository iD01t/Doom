{
    "name": "Enhance Image",
    "version": "1.1.0",
    "author": "SpriteForge Built-in",
    "category": "Adjustment",
    "description": "Provides access to core enhancement functions like brightness and contrast.",
    "entry_point": "__init__",
    "dependencies": ["core.image_processor"],
    "parameters": [
        {
            "name": "enhancement_type",
            "type": "choice",
            "choices": ["brightness", "contrast", "saturation", "sharpness"],
            "default": "brightness"
        },
        {
            "name": "factor",
            "type": "float",
            "default": 1.5,
            "min": 0.0,
            "max": 5.0
        }
    ]
}
